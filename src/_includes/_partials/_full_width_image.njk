<section class="full-width-image js-scroll-header">
  <div class="container">
    <div
      class="full-width-image__bg"
      style="background-image: url({{ fullWidthImageData.image | imgURL }})"
    ></div>
    <div class="full-width-image__card text-center">
      <h4 class="full-width-image__card_title {{ 'colored' if fullWidthImageData.colored }} {{ 'shadow' if fullWidthImageData.titleShadow }}">
        {{ fullWidthImageData.title }}
      </h4>
    </div>
  </div>
</section>
